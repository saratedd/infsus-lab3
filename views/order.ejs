<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>LAB3</title>
</head>
<body>
<%- include('header') %>
<div class="container">
    <div class="row">
        <div class="col-12">
            <% if (isEdit) { %>
                <h1 class="text-center">Uredi narud탑bu</h1>
            <% } else { %>
                <h1 class="text-center">Nova narud탑ba</h1>
            <% } %>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form id="addOrderForm" action="/narudzbe" method="post">
                <input type="hidden" name="isEdit" value="<%= isEdit %>">
                <% if (isEdit) { %>
                    <input type="hidden" name="id" value="<%= order.id %>">
                <% } else { %>
                    <input type="hidden" name="id" value="<%= Math.floor(Math.random() * 1000000000) %>">
                <% } %>
                <div class="mb-3">
                    <label for="table" class="form-label">Broj stola</label>
                    <input type="text" class="form-control" id="table" name="table" value="<%= order.table %>">
                    <% if (error.table) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= error.table %>
                        </div>
                    <% } %>
                </div>
                <div class="mb-3">
                    <label for="user" class="form-label">Zadu탑eni korisnik</label>
                    <select id="user" name="user">
                        <% for (user of users) { %>
                            <option value="<%= user.id %>"
                            <% if (user.id === order.user) { %> selected
                                    <% } %>
                            ><%= user.name %></option>
                    </select>
                </div>
                <div class="mb-3">
                    <p>Status narud탑be</p>
                    <!-- if isEdit mode, check the beforehand checked radio button -->
                    <% if (isEdit) { %>
                        <% if (user.stats === "open") { %>
                            <input type="radio" id="open" name="status" value="open" checked>
                            <label for="open">Otvorena</label><br>
                            <input type="radio" id="closed" name="status" value="closed">
                            <label for="closed">Zatvorena</label><br>
                        <% } else { %>
                            <input type="radio" id="open" name="status" value="open">
                            <label for="open">Otvorena</label><br>
                            <input type="radio" id="closed" name="status" value="closed" checked>
                            <label for="closed">Zatvorena</label><br>
                        <% } %>
                    <% } else { %>
                        <input type="radio" id="open" name="status" value="open">
                        <label for="open">Otvorena</label><br>
                        <input type="radio" id="closed" name="status" value="closed">
                        <label for="closed">Zatvorena</label><br>
                    <% } %>
                </div>
                <button type="submit" class="btn btn-success">Spremi</button>
            </form>
        </div>
    </div>
</div>
</body>
</html>