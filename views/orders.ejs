<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>LAB3</title>
</head>
<body>
<%- include('header') %>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center">Narudžbe</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <!-- search form -->
            <form action="/narudzbe" method="GET">
                <div class="input-group">
                    <input type="search" name="searchText" class="form-control rounded" placeholder="Pretraga po svemu"
                           aria-label="Search" aria-describedby="search-addon"/>
                    <button type="submit" class="btn btn-outline-primary">Pretraga</button>
                </div>
            </form>
        </div>
        <div class="col-4"></div>
    </div>
    <div class="row">
        <div class="col-12" style="margin-top: 10px;">
            <a href="/narudzbe/add" class="btn btn-success">Dodaj narudžbu</a>
            <table class="table table-shown">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <% for (attr of attributes) { %>
                        <th><%= attr %></th>
                    <% } %>
                </tr>
                </thead>
                <tbody>
                <% var i = 0 %>
                <% for (row of rows) { %>
                    <tr>
                        <th scope="row"><%= ++i %></th>
                        <% for (attr of attributes) { %>
                            <td><%= row[attr] %></td>
                        <% } %>
                        <% let addrEdit = '/narudzbe/' + row['id'] %>
                        <% let addrDelete = '/narudzbe/' + row['id'] + '/delete' %>
                        <td><a href="<%= addrEdit %>" class="btn btn-primary">Pregled</a></td>
                        <td>
                            <form id="addOrderForm" action="<%= addrDelete %>" method="post">
                                <input type="submit" value="Izbriši" class="btn btn-danger">
                            </form>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
</body>
</html>